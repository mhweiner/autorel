{
  "name": "autorel",
  "version": "0.0.0-autorel",
  "description": "Automate semantic releases based on conventional commits. Similar to semantic-release but much simpler.",
  "license": "MIT",
  "author": "Marc H. Weiner <mhweiner234@gmail.com> (https://mhweiner.com)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "autorel": "bin/cli.js"
  },
  "files": [
    "bin",
    "dist",
    "!dist/**/*.spec.*",
    "package.json",
    "package-lock.json"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mhweiner/autorel.git"
  },
  "scripts": {
    "prepare": "npm run build",
    "test": "npm run build && c8 hoare 'src/**/*.spec.ts' && c8 report -r text -r html",
    "lint": "eslint ./ --ext .js,.ts",
    "build": "rm -rf ./dist && tsc"
  },
  "homepage": "https://github.com/mhweiner/autorel/blob/main/README.md",
  "keywords": [
    "semantic-release",
    "semantic commits",
    "conventional commits",
    "semantic versioning",
    "automatic release",
    "automatic builds",
    "builds",
    "ci/cid",
    "ci-cd",
    "continuous integration",
    "continuous deployment",
    "automation",
    "release automation",
    "release-please"
  ],
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "c8": "^7.10.0",
    "cjs-mock": "3.0.1",
    "eslint": "^8.4.1",
    "hoare": "3.4.4",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "colorette": "2.0.20",
    "commander": "^12.1.0",
    "js-yaml": "^4.1.0",
    "jsout": "4.0.4",
    "typura": "1.8.0"
  }
}
